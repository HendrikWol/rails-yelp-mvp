<div>
  <p id="notice"><%= notice %></p>
  <div class="text-center">
  <h1>Restaurants</h1>
  </div>
  <div style="margin-left: 350px;">
  <table>
    <thead>
      <tr>
        <th style="padding-bottom: 10px;">Name</th>
        <th style="padding-bottom: 10px;">Address</th>
        <th style="padding-bottom: 10px;">Phone</th>
        <th style="padding-bottom: 10px;">Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td style="padding-right: 20px;"><%= restaurant.name %></td>
          <td style="padding-right: 20px;"><%= restaurant.address %></td>
          <td style="padding-right: 20px;"><%= restaurant.phone_number %></td>
          <td style="padding-right: 20px;"><%= restaurant.category %></td>
          <td><div class="btn btn-primary" style="background-color: white; margin: 2px 0 2px 10px;"><%= link_to 'Show', restaurant %></div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
